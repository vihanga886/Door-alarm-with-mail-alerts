//copy the code generated by blynk
#define BLYNK_TEMPLATE_ID "***************"  
#define BLYNK_TEMPLATE_NAME "***************"
#define BLYNK_AUTH_TOKEN "***************"

#define BLYNK_PRINT Serial
#include <ESP8266WiFi.h>
#include <BlynkSimpleEsp8266.h>
 
char auth[] = BLYNK_AUTH_TOKEN;

char ssid[] = "***************";  // type your wifi name
char pass[] = "***************";  // type your wifi password
 
#define MAGNET_SENSOR  4

BlynkTimer timer;
//int flag=0;
void notifyOnTheft()
{
  int isTheftAlert = digitalRead(MAGNET_SENSOR);
  Serial.println(isTheftAlert);
  if (isTheftAlert==1) {
    Serial.println("Theft Alert in Home");
    //Blynk.email("***************", "Alert", "Theft Alert in Home"); // type your mail
    //Blynk.notify("Alert : Theft Alert in Home");
    digitalWrite(13, HIGH);
    digitalWrite(15, HIGH);  
    Blynk.logEvent("********","Theft Alert in Home"); // type template Name
//    flag=1;
  }
  else if (isTheftAlert==0)
  {
   digitalWrite(13,LOW);
   digitalWrite(15, LOW); 
   // flag=0;
  }
}

void setup(){
  pinMode(MAGNET_SENSOR, INPUT);
  pinMode(13, OUTPUT);
  pinMode(15, OUTPUT);
   Serial.begin(115200);
  Blynk.begin(auth, ssid, pass);
  //dht.begin();
  pinMode(D1,INPUT_PULLUP);
  timer.setInterval(5000L, notifyOnTheft);
}

void loop(){
  Blynk.run();
  timer.run();
}
